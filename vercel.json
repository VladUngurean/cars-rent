{
  "version": 2,
  "builds": [
    { "src": "/api/index.php", "use": "vercel-php@0.6.0" },
    { "src": "/public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/(css|js)/(.*)",
      "dest": "public/$1/$3"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}
